@model IEnumerable<RoleViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a class="btn btn-success" asp-controller="Roles" asp-action="Create">Add New Role</a>
<br />
<br />
<h1>All Roles</h1>
<br />
<br />

<div class="m-2">
    <form asp-action="Index" class="row offset-2" method="get">
        <div class="col-8">
            <input class="form-control" type="text" name="RoleSearchName" placeholder="Search Roles's Name" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-primary" value="Search" />
        </div>
    </form>
</div>

@if (Model.Any())
{
    <table class="table table-striped table-hover mt-3">
        <thead class="text-center">
            <tr>
                <th class="text-start">@Html.DisplayNameFor(r => r.Id)</th>
                <th>@Html.DisplayNameFor(r => r.RoleName)</th>
                <th>Details </th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var role in Model)
            {
                <tr>
                    <td class="text-start">@Html.DisplayFor(R => role.Id)</td>
                    <td>@Html.DisplayFor(R => role.RoleName)</td>

                    <td>
                        <a class="text-primary" asp-action="Details" asp-route-id="@role.Id">
                            <i class="fas fa-eye"></i>
                        </a>
                    </td>
                    <td>
                        <a class="text-warning" asp-action="Edit" asp-route-id="@role.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a class="text-danger" asp-action="Delete" asp-route-id="@role.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        <h2>No Roles Manager Found !!</h2>
    </div>
}

